{
    // Editor
    "editor.acceptSuggestionOnCommitCharacter": false, // Принятие предложений при вводе символа фиксации
    "editor.codeLens": false, // Отображение СodeLens
    "editor.cursorSmoothCaretAnimation": "on", // Плавная анимация курсора
    "editor.cursorStyle": "line-thin", // Стиль курсора
    "editor.cursorSurroundingLines": 5, // Кол-во строк которые видны при скролле вверх/вниз
    "editor.defaultColorDecorators": true, // Отображение цветовых меток рядом с кодом цвета
    "editor.detectIndentation": false, // Автоматическое изменение отступов в файлах
    "editor.dragAndDrop": false, // Перемещение выделенного текста
    "editor.experimentalWhitespaceRendering": "off", // Методы отрисовки пробела
    "editor.find.autoFindInSelection": "multiline", // Автоматический поиск в выделенном тексте (только при многострочном выделении)
    "editor.folding": false, // Сворачивание кода
    "editor.fontFamily": "Tahoma, MS Sans Serif, Verdana, Consolas , monospace", // Шрифты в редакторе кода
    "editor.fontLigatures": true, // Использование лигатур
    "editor.fontSize": 16, // Размер шрифта в редакторе кода
    "editor.formatOnPaste": true, // Форматирование при вставке
    "editor.formatOnSave": true, // Форматирование при сохранении
    "editor.formatOnType": true, // Форматирование при печати
    "editor.hover.enabled": false, // Подсказки при наведении
    "editor.inlayHints.enabled": "offUnlessPressed", // Подсказки в строке (CTRL + ALT)
    "editor.inlineSuggest.enabled": true, // Подсказки при печати в строке (по умолчанию включены, нужны для copilot)
    "editor.inlineSuggest.suppressSuggestions": true, // Отключение предложений когда есть предложения от GitHub Copilot (не работает в этой версии)
    "editor.lightbulb.enabled": true, // Отображение лампочки (по умолчанию включена)
    "editor.linkedEditing": true, // Связанное редактирование
    "editor.minimap.enabled": false, // Отображение мини-карты
    "editor.mouseWheelZoom": true, // Приближение с помощью колеса
    "editor.occurrencesHighlight": false, // Выделение всех одинаковых слов при клике на слово
    "editor.overviewRulerBorder": false, // Отображение границы скролла
    "editor.parameterHints.enabled": false, // Подсказки при вводе параметров функции
    "editor.renderFinalNewline": "dimmed", // Отображение последней строки
    "editor.renderLineHighlight": "all", // Выделение текущей строки
    "editor.renderWhitespace": "all", // Отображение пробелов
    "editor.scrollbar.horizontalScrollbarSize": 14, // Размер горизонтального скролла
    "editor.scrollBeyondLastColumn": 10, // Кол-во символов которые отображаются после конца строки
    "editor.smoothScrolling": true, // Плавная анимация скроллинга
    "editor.snippetSuggestions": "top", // Отображение сниппетов
    "editor.suggest.insertMode": "replace", // Перезапись при принятии
    "editor.codeActionsOnSave": { // Действия при сохранении
        "source.fixAll": false, // Автоматичесмкое исправление
        "source.organizeImports": true, // Форматирование Imports
        "source.organizeLinkDefinitions": true, // Форматирование ссылок в Markdown
        "source.unusedImports": true, // Удаляет неиспользуемые Imports
    },
    "editor.rulers": [
        100 // Вертикальная линейка
    ],
    // DiffEditor
    "diffEditor.experimental.showMoves": true, // Отображение перемещений в редакторе несовпадений
    // Files
    "files.autoSave": "afterDelay", // Автосохранение
    "files.insertFinalNewline": true, // Удаление лишних строк при сохранении
    "files.trimFinalNewlines": true, // Вставка последней строки в конец при сохранении
    "files.trimTrailingWhitespace": true, // Удаление лишних пробелов при сохранении
    // WorkBench
    "workbench.editor.preventPinnedEditorClose": "never", // Способы закрытия закреплённых вкладок
    "workbench.editor.revealIfOpen": true, // Переход к активной вкладке при открытии если она уже открыта в группе
    "workbench.editor.tabCloseButton": "off", // Кнопка закрытия вкладок
    "workbench.editor.tabSizing": "shrink", // Размер вкладок
    "workbench.editor.untitled.hint": "hidden", // Советы в новых созданных файлах
    "workbench.editor.wrapTabs": true, // Размещение вкладок на нескольких строчках
    "workbench.iconTheme": "material-icon-theme", // Тема иконок
    "workbench.list.defaultFindMode": "filter", // Режим поиска в проводнике
    "workbench.list.smoothScrolling": true, // Плавная прокрутка
    "workbench.startupEditor": "none", // Начальный экран
    "workbench.tips.enabled": false, // Советы на подложке
    "workbench.tree.indent": 14, // Отступ между файлами в проводнике
    "workbench.tree.renderIndentGuides": "always", // Отображение отступов в проводнике
    "workbench.view.alwaysShowHeaderActions": true, // Всегда отображать кнопки рабчей области
    // Breadcrumbs
    "breadcrumbs.enabled": false, // Активные хлебные крошки
    // Window
    "window.closeWhenEmpty": true, // Закрывать редактор при закрытии последней вкладки в окне
    "window.commandCenter": false, // Отображение командного центра
    "window.customMenuBarAltFocus": false, // Фокус при нажатии ALT
    "window.enableMenuBarMnemonics": false, // Мнемоника
    "window.newWindowDimensions": "inherit", // Размер нового открывающегося окна
    "window.openWithoutArgumentsInNewWindow": "off", // Открывать новое окно без аргументов
    "window.restoreFullscreen": true, // Восстановление полноэкранного окна
    "window.title": "$(appName)", // Заголовок окна
    "window.zoomLevel": 0.666, // Масштаб окна
    // Explorer
    "explorer.compactFolders": false, // Компактные папки
    "explorer.confirmDelete": false, // Подтверждение удаления файла
    "explorer.confirmDragAndDrop": false, // Подтверждение переноса файла
    "explorer.incrementalNaming": "smart", // Стратегия наименования файлов
    // Search
    "search.quickOpen.includeHistory": false, // Включать историю перемещений при поиске в quickOpen
    "search.showLineNumbers": true, // Показывать номера строк при поиске
    "search.smartCase": true, // Умный регистр при поиске
    // Debug
    "debug.console.fontSize": 16, // Размер шрифта в консоли отладки
    "debug.inlineValues": "on", // Отображение значений переменных в редакторе во время отладки
    "debug.onTaskErrors": "showErrors", // Действия при обнаружении ошибок при отладке
    "debug.openDebug": "openOnSessionStart", // Когда открывать отладчик
    "debug.openExplorerOnEnd": true, // Открытие проводника после отладки
    "debug.showBreakpointsInOverviewRuler": true, // Отображение точек останова на полосе прокрутки
    "debug.toolBarLocation": "docked", // Расположение панели отладки
    // SCM
    "scm.alwaysShowActions": true, // Всегда отображаются кнопки в окне SCM
    "scm.diffDecorationsGutterVisibility": "hover", // Отображение индикатора изменений в текстовом редакторе
    "scm.diffDecorationsGutterWidth": 5, // Ширина индикатора изменений в текстовом редакторе
    "scm.inputFontSize": 16, // Шрифт в окне SCM
    "scm.diffDecorationsGutterPattern": { // Шаблон индикатора изменений в текстовом редакторе
        "modified": false
    },
    // Terminal
    "terminal.integrated.cursorBlinking": true, // Мигание курсора в терминале
    "terminal.integrated.cursorStyle": "underline", // Стиль курсора в терминале
    "terminal.integrated.cursorStyleInactive": "none", // Стиль курсора в неактивном терминале
    "terminal.integrated.fontFamily": "Consolas", // Шрифт в терминале
    "terminal.integrated.fontSize": 16, // Размер шрифта в терминале
    "terminal.integrated.smoothScrolling": true, // Плавная прокрутка в терминале
    "terminal.integrated.profiles.windows": { // Профили терминала
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": [
                "-ExecutionPolicy",
                "RemoteSigned"
            ]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Bash": {
            "path": [
                "C:\\soft\\programms\\PortableGit\\bin\\bash.exe"
            ]
        }
    },
    // Chat
    "chat.editor.fontSize": 16, // Размер шрифта в чате
    // Update
    "update.enableWindowsBackgroundUpdates": false, // Автоматическое обновление
    "update.mode": "start", // Режим обновления
    // Telemetry
    "telemetry.telemetryLevel": "off", // Телеметрия
    // Security
    "security.workspace.trust.enabled": false, // Доверие в рабочей области
    // GitHub Copilot
    "github.copilot.inlineSuggest.enable": false, // Выключение GitHub Copilot
    // Git
    "git.autofetch": true, // Автообновление веток в репозитории
    "git.autoStash": true, // Прятать перед вытягиванием и восстанавливать после вытягивания
    "git.closeDiffOnOperation": true, // Закрывать редактор несовпадений при операции
    "git.confirmSync": false, // Подтверждать синхронизацию
    "git.defaultCloneDirectory": "C:\\Users\\triplebleed\\Documents\\Repos", // Путь к папке с репозиториями
    "git.enableSmartCommit": true, // Умный коммит
    "git.followTagsWhenSync": true, // Отправлять аннотированные теги при синхронизации
    "git.mergeEditor": true, // Трёхстороннее слияние автоматически
    "git.path": "C:\\soft\\programms\\PortableGit\\bin\\git.exe", // Путь к Git
    "git.pruneOnFetch": true, // Удаляет удалённые ветки из локального репозитория если они были удалены в удалённом
    "git.pullBeforeCheckout": true, // Вытягивать при переключении веток
    "git.terminalGitEditor": true, // VSCode в качестве редактора Git
    // GitHub
    "github.gitProtocol": "ssh", // Протокол
    // isort
    "isort.args": [ // Аргументы для isort
        "--profile",
        "black"
    ],
    // Markdown
    "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart", // Вставка ссылок в markdown при выделении текста
    "markdown.preview.fontSize": 16, // Размер шрифта в markdown
    "markdown.updateLinksOnFileMove.enabled": "prompt", // Обновление ссылок при перемещении файла
    "markdown.validate.enabled": true, // Проверка синтаксиса markdown
    // Python
    "black-formatter.args": [ // Аргументы для black
        "--line-length", // Длина строки
        "100",
        "--skip-string-normalization" // Не нормализовать строки
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter" // Форматировщик
    },
    "python.analysis.autoFormatStrings": true, // Автоформатирование f-строк при вводе {
    "python.analysis.autoImportCompletions": true, // Авто-импорт
    "python.analysis.completeFunctionParens": true, // Скобки при автодополнении функций
    "python.languageServer": "Pylance", // Тип языкового сервера
    "python.terminal.activateEnvInCurrentTerminal": true, // Автоактвация среды
    // Python Inlay Hints
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    // Code Runner
    "code-runner.clearPreviousOutput": true, // Очищать предыдущий вывод
    "code-runner.enableAppInsights": false, // Телеметрия
    "code-runner.ignoreSelection": true, // Игнорировать выделение
    "code-runner.runInTerminal": true, // Запуск в терминале
    "code-runner.saveFileBeforeRun": true, // Сохранение файла перед запуском
    "code-runner.showExecutionMessage": true, // Отображение сообщения о запуске
    "code-runner.showRunCommandInEditorContextMenu": false, // Показывать кнопку запуска в контекстном меню редактора
    "code-runner.showRunCommandInExplorerContextMenu": false, // Показывать кнопку запуска в контекстном меню проводника
    "code-runner.executorMap": {
        "csharp": "cd $dir && dotnet run", // Запуск C#
    },
}
